{
	"name": "spec-buddy",
	"displayName": "spec_buddy",
	"description": "Keeps your spec files open as you open and close source code.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.38.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "specBuddy.activate",
				"title": "Activate Spec Buddy"
			},
			{
				"command": "specBuddy.on",
				"title": "Turn On Spec Buddy"
			},
			{
				"command": "specBuddy.off",
				"title": "Turn Off Spec Buddy"
			}
		],
		"configuration": {
			"type": "object",
			"title": "Spec Buddy Configuration",
			"properties": {
				"specBuddy.active": {
					"type": "boolean",
					"default": false,
					"description": "Is the extension on"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.38.0",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"typescript": "^3.3.1",
		"tslint": "^5.12.1",
		"vscode-test": "^1.2.0"
	}
}
